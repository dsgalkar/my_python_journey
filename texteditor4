class textEditor:
    def __init__(self):
        self.document=""
        self.undo_stack=[]
        self.redo_stack=[]
    def make_changes(self,change):
        self.undo_stack.append(self.document)
        self.document += change
        self.redo_stack.clear()
        print("clange done")
        self.display_stack()
    def undo_stack(self):
        if self.undo_stack():
            self.redo_stack.append(self.document)
            self.document=self.undo_stack.pop()
            print("undo done")
        else:
            self.display_stack
    def redo_stack(self):
        if self.redo_stack:
            self.undo_stack.append(self.document)
            self.document=self.redo_stack.pop()
            print("redo done")
        else:
            print("No more actions to be performed")
            self.display_stack()
    def run_editor(self):
        while True:
            print("Menu")
            print("1:make a change")
            print("2:undo")
            print("3:redo")
            print("4:display stack")
            print("5:exit")
            
            choice=int(input("Enter your choice :- "))
            match choice:
                case 1:
                    change=input("Enter the text to be added : ")
                    self.make_change(change)
                case 2:
                    self.undo_action()
                case 3:
                    self.redo_action()
                case 4:
                    self.display_stack()
                case 5:
                    print("existing")
                    break
                case _:
                    print("invalid input")
editor=textEditor()
editor.run_editor()